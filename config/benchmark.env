# Configuration BaseType Benchmark

# === GÉNÉRAL ===
DEFAULT_SEED=42
LOG_LEVEL=INFO

# === DATASETS ===
DATASET_CACHE_DIR=data/cache
DATASET_EXPORT_DIR=data/exports
DATASET_RESULTS_DIR=data/results

# === GITHUB RELEASES ===
GITHUB_REPO_OWNER=synaptikad
GITHUB_REPO_NAME=basetype-benchmark-datasets
# GITHUB_TOKEN doit être défini dans l'environnement

# === SERVICES ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=benchmark
POSTGRES_DB=benchmark

MEMGRAPH_HOST=localhost
MEMGRAPH_PORT=7687
MEMGRAPH_USER=
MEMGRAPH_PASSWORD=

OXIGRAPH_HOST=localhost
OXIGRAPH_PORT=7878

# === TIMEOUTS ===
SERVICE_STARTUP_TIMEOUT=60
QUERY_TIMEOUT=300
DATA_LOAD_TIMEOUT=1800

# === RESSOURCES ===
MAX_MEMORY_GB=16
MAX_PARALLEL_JOBS=1

# === PROFILS DE TEST ===
# Profils recommandés pour développement
DEV_PROFILES=small-1w,small-1m
# Profils pour tests complets
FULL_PROFILES=small-1w,small-1m,medium-1m,large-1w

# === MÉTRIQUES ===
COLLECT_MEMORY=true
COLLECT_CPU=true
COLLECT_DISK_IO=true
COLLECT_NETWORK=false